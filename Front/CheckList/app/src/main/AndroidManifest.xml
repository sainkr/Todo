<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hong.checklist">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".ChallengeAddActivity"></activity>
        <activity android:name=".ChallengeHostActivity"></activity>
        <activity android:name=".ChallengeMemberActivity"></activity>
        <activity android:name=".ChallengeEditActivity"></activity>
        <activity android:name=".LoginActivity"></activity>
        <activity android:name=".JoinActivity"></activity>
        <activity android:name=".AddFriendActivity"></activity>
        <activity android:name=".DateActivity"></activity>
        <activity android:name=".OptionActivity"></activity>
    </application>

</manifest>